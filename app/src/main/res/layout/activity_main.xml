<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.corp.infinity.dictionary_app.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Dictionary-App"
        android:id="@+id/textview1"
        android:textSize="30sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText1"
        android:hint="Enter word"
        android:gravity="center_horizontal"
        android:singleLine="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:hint="Enter synonym"
        android:gravity="center_horizontal" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:hint="Enter antonym"
        android:gravity="center_horizontal" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="Save"
        android:id="@+id/button1"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_find"
        android:hint="Search..."
        android:gravity="center_horizontal"
        android:singleLine="true" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Synonym"
            android:id="@+id/syn"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Antonym"
            android:id="@+id/ant"/>

    </RadioGroup>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="Find"
        android:id="@+id/button2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Output will be shown here"
        android:gravity="center"
        android:id="@+id/textview_output"/>

</LinearLayout>
